<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console appender for application logs (excluding Hibernate/database) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator>
                <expression>logger.startsWith("org.hibernate") || 
                           logger.startsWith("org.springframework.orm.jpa") || 
                           logger.startsWith("org.springframework.jdbc") ||
                           logger.startsWith("org.h2")</expression>
            </evaluator>
            <onMismatch>ACCEPT</onMismatch>
            <onMatch>DENY</onMatch>
        </filter>
    </appender>

    <!-- File appender for Hibernate/database logs (dev) -->
    <springProfile name="!prod">
        <appender name="DATABASE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/database.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/database.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
                <totalSizeCap>100MB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- File appender for Hibernate/database logs (production) -->
    <springProfile name="prod">
        <appender name="DATABASE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>/opt/dsa-table-backend/logs/database.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/opt/dsa-table-backend/logs/database.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
                <totalSizeCap>100MB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- Logger for Hibernate -->
    <logger name="org.hibernate" level="DEBUG" additivity="false">
        <appender-ref ref="DATABASE_FILE"/>
    </logger>

    <!-- Logger for Spring JPA -->
    <logger name="org.springframework.orm.jpa" level="DEBUG" additivity="false">
        <appender-ref ref="DATABASE_FILE"/>
    </logger>

    <!-- Logger for Spring JDBC -->
    <logger name="org.springframework.jdbc" level="DEBUG" additivity="false">
        <appender-ref ref="DATABASE_FILE"/>
    </logger>

    <!-- Logger for H2 database -->
    <logger name="org.h2" level="INFO" additivity="false">
        <appender-ref ref="DATABASE_FILE"/>
    </logger>

    <!-- File appender for general application logs (dev) -->
    <springProfile name="!prod">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/application.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
                <totalSizeCap>100MB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- Production file appender (uses absolute path from application.properties) -->
    <springProfile name="prod">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${logging.file.name:-/opt/dsa-table-backend/logs/application.log}</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${logging.file.name:-/opt/dsa-table-backend/logs/application.log}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>${logging.file.max-size:-10MB}</maxFileSize>
                <maxHistory>${logging.file.max-history:-30}</maxHistory>
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- Root logger - CONSOLE always, FILE only if permissions allow -->
    <!-- Note: If file appenders fail due to permissions, the app will still start with console logging -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
